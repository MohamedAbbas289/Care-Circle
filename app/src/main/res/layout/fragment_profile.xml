<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/signup_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile_pic"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background" />
    <ImageView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/edit_profile_img"
        app:layout_constraintBottom_toBottomOf="@+id/profile_pic"
        app:layout_constraintEnd_toEndOf="@+id/profile_pic"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/profile_pic"
        app:layout_constraintTop_toTopOf="@+id/profile_pic"
        app:layout_constraintVertical_bias="0.9" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9D9D9D"
        android:textSize="25sp"
        android:text="userName"
        app:layout_constraintEnd_toEndOf="@id/profile_pic"
        app:layout_constraintStart_toStartOf="@id/profile_pic"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
        tools:text="Mohamed Abbas" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textColor="#9D9D9D"
        android:textSize="16sp"
        android:text="userEmail"
        app:layout_constraintEnd_toEndOf="@id/user_name"
        app:layout_constraintStart_toStartOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        tools:text="Mohamed_Abbas@gmail.com" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notifications"
        android:layout_width="305dp"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:text="Notifications"
        android:textSize="20sp"
        app:icon="@drawable/notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_email" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/appointemnts"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2EDCD8"
        android:text="Appointments and requests"
        android:textSize="20sp"
        app:icon="@drawable/appointemnts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notifications" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/doctors"
        android:layout_width="305dp"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#45E1C4"
        android:text="My doctors"
        android:textSize="20sp"
        app:icon="@drawable/doctors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointemnts" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/share"
        android:layout_width="305dp"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#65E9A8"
        android:text="Share"
        android:textSize="20sp"
        app:icon="@drawable/share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctors" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="305dp"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F55252"
        android:text="Log out"
        android:textSize="20sp"
        app:icon="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share" />

</androidx.constraintlayout.widget.ConstraintLayout>